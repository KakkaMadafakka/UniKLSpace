<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.phobo.uniklspace">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.WRITE_CONTACTS"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Home.SplashMainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Home.MainActivity"  android:theme="@style/AppTheme"/>

        <activity android:label="Add Batch"   android:name=".Timetable.ListBatchesActivity" />
        <activity android:label="Add Batch"   android:name=".Timetable.AddBatchActivity" />
        <activity android:label="List Classes"   android:name=".Timetable.ListClassesActivity" />
        <activity android:label="Add Class"   android:name=".Timetable.AddClassActivity" />
        <activity android:label="Update Batch"   android:name=".Timetable.UpdateBatchActivity" />
        <activity android:label="Update Class"   android:name=".Timetable.UpdateClassActivity" />

    </application>

</manifest>